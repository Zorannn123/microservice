<?xml version="1.0" encoding="utf-8"?>
<StartupServicesManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="OrderService_InstanceCount" DefaultValue="-1" />
    <Parameter Name="ProductService_InstanceCount" DefaultValue="-1" />
    <Parameter Name="EmailService_InstanceCount" DefaultValue="-1" />
    <Parameter Name="UsersService_InstanceCount" DefaultValue="-1" />
  </Parameters>
  <Services>
    <!-- The section below creates instances of service types, when an instance of this 
         application type is created. You can also create one or more instances of service type using the 
         ServiceFabric PowerShell module.

         The attribute ServiceTypeName below must match the name defined in the imported ServiceManifest.xml file. -->
    <Service Name="OrderService" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="OrderServiceType" InstanceCount="[OrderService_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="ProductService" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="ProductServiceType" InstanceCount="[ProductService_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="EmailService" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="EmailServiceType" InstanceCount="[EmailService_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="UsersService" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="UsersServiceType" InstanceCount="[UsersService_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </Services>
</StartupServicesManifest>